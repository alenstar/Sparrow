//该文件用来测试语言的函数、闭包功能

def fact(n) {
  f = 1
  while n > 0 {
    f = f * n
    n = n - 1  
  }
  return f
}

def fib(n) {
  if n < 2 {
    return n  
  } else {
    return fib(n - 1) + fib(n - 2) 
  }
}

//返回闭包
def create_lamb(n) {
  return lamb (num) {
    return n + num 
  }
}

//入参是闭包
a_func = lamb(a, b) {
            return a * b 
         }
def use_lamb(func, a, b) {
  return func(a, b)
}

//使用全局变量
$g_var = 100
def use_global(num) {
  return $g_var + num  
}

def use_global_lamb(num) {
  my_lamb = lamb(x) {
    return num + x + $g_var  
  }  
  return my_lamb
}
my_lamb = use_global_lamb(100)

//----------------------------------------main函数
def main() {

print("==========")
print("【虚拟机】测试函数和闭包")

result = fact(4)
if result != 24 {
  print("failed 1")
  print(result)
} else {
  print("success 1")  
}

result = fib(10)
if result != 55 {
  print("failed 2")
  print(result)
} else {
  print("success 2")  
}

add_lamb = create_lamb(10)
result = add_lamb(5)
if result != 15 {
  print("failed 3")  
} else {
  print("success 3")  
}

result = use_lamb(a_func, 2, 3)
if result != 6 {
  print("failed 4")  
} else {
  print("success 4")  
}

result = use_global(2)
if result != 102 {
  print("failed 5")  
} else {
  print("success 5")  
}

result = my_lamb(2)
if result != 202 {
  print("failed 6")  
} else {
  print("success 6")  
}

print("==========")

}
