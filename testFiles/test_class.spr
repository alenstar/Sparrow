class Person {
  //姓名
  name_ = nil
  
  //年龄
  age_ = nil
  
  //性别
  sex_ = nil  

  def init(name, age, sex) {
    name_ = name
    age_ = age
    sex_ = sex  
  }

  def get_age() {
    return age_  
  }

  def set_age(age) {
    age_ = age  
  }
}

class Student extends Person {
  //学号
  student_id_ = 000

  //测试同名成员
  name_ = "Student"
  
  def init(name, age, sex, stu_id) {
    super.init(name, age, sex)
    student_id_ = stu_id
  }  

  //测试同名函数
  def set_age(age) {
    //不需要做任何事，使得修改age失效  
  }
}

z = Student.new("zzp", 22, "man", 123)

//访问成员
